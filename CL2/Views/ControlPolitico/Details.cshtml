@model CL2.Models.ControlPolitico

@{
    ViewData["Title"] = "Detalles Control Político";
    var sesion = Model.SesionPlenarioID;
}

<html lang="en">
<body class="sb-nav-fixed">
    <div>
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Detalles de intervención: Control Político</h1>

                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a asp-controller="SesionPlenario" asp-action="Details" asp-route-id=@sesion>Sesión Plenario #@sesion</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ControlPolitico" asp-action="IndexSpecific" asp-route-id=@sesion>Lista de C.P.</a></li>
                    <li class="breadcrumb-item active">Detalles C.P.</li>
                </ol>

                <hr />
                @*Información personal del diputado*@
                <div class="card">
                    <div class="card-header">
                        Información de intervención
                    </div>
                    <div class="card-body">
                        <div class="p-2">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.SesionPlenario.Plenario.Administracion.AdministracionPeriodo)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.SesionPlenario.Plenario.Administracion.AdministracionPeriodo)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.SesionPlenario.NumeroSesion)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.SesionPlenario.NumeroSesion)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.SesionPlenario.FechaSesionPlenario)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.SesionPlenario.FechaSesionPlenario)
                                </dd>
                            </dl>
                        </div>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ResumenComentario)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ResumenComentario)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DetalleComentario)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DetalleComentario)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.PosicionControl)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.PosicionControl)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SesionPlenario)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SesionPlenario.PeriodoSesionPlenario)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Temas)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Temas.TemaDesc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Diputado(a)")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Diputados.nombreCompleto)
                            </dd>
                        </dl>
                    </div>

                </div>
                <br />
                <div class="form-group btn-group mt-lg-4" role="group">
                    <a asp-action="IndexSpecific" asp-route-id="@Model.SesionPlenarioID" class=" btn btn-dark">Volver</a>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.DiputadoID">Editar</a>
                </div>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
                <script src="js/scripts.js"></script>
            </div>
        </main>
    </div>
</body>
</html>