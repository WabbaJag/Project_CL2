@model CL2.Models.Legislativo

@{
    ViewData["Title"] = "Detalles de Legislación";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Detalles de Legislación</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AnnoLegislativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnnoLegislativo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Administracion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Administracion.AdministracionPeriodo)
            </dd>
        </dl>
        <hr />
    </div>
    <div class="form-group btn-group mt-lg-4" role="group">
        <a asp-controller="Utilidades" asp-action="Index" class=" btn btn-dark">Volver</a>
        <a asp-action="Edit" asp-route-id="@Model.LegislativoID"
           class="btn btn-warning">Editar</a>

    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>
