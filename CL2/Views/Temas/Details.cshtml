@model CL2.Models.Tema

@{
    ViewData["Title"] = "Detalles de Tema";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Detalles de Tema</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TemaDesc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TemaDesc)
            </dd>
        </dl>
    </div>
    <hr />

    <div class="form-group btn-group mt-lg-4" role="group">
        <a asp-controller="Utilidades" asp-action="Index" class=" btn btn-dark">Volver</a>
        <a asp-action="Edit" asp-route-id="@Model.TemaID"
           class="btn btn-warning">Editar</a>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>
<script src="~/js/functions.js"></script>