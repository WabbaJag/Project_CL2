@model CL2.Models.Plenario

@{
    ViewData["Title"] = "Editar Plenario";
}

<head>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .newspaper {
            -webkit-column-count: 3; /* Chrome, Safari, Opera */
            -moz-column-count: 3; /* Firefox */
            column-count: 3;
        }
    </style>
</head>

<div class="container-fluid px-4">
    <h1 class="mt-4">Editar Plenario</h1>

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Plenario" asp-action="Index">Plenarios</a></li>
        <li class="breadcrumb-item active">Editar Plenario</li>

    </ol>

    <hr />
    @* muestra el plenario a editar *@
    <div>
        <dl class="row">
            <dt class="col-sm-2">
              Plenario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Administracion.AdministracionPeriodo)
            </dd>
        </dl>
    </div>


    <div class="row">
        <div class="col-md-10 col-lg-10">
            <form asp-area="" asp-controller="Plenarios" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PlenarioID" />

                @* CHECKBOX LIST PARA AGREGAR DIPUTADOS *@
                <div class="card">
                    <div class="card-body">
                        <p>Seleccionar Diputado</p>
                        <br />


                        <ul id="myUL" class="list-group-item newspaper" style="list-style-type:none">

                            @foreach (var dip in ViewBag.Diputados)
                            {
                                <li class="">

                                    <label>
                                        <input type="checkbox" name="DiputadosID" value="@dip.DiputadoID" /><a>  @dip.NombreDiputado @dip.PrimerApellido @dip.SegundoApellido</a> <br />
                                        <span></span>
                                    </label>
                                </li>
                            }

                        </ul>
                    </div>
                </div>



                <div class="form-group btn-group mt-lg-4" role="group">
                    <a asp-action="Index" class="btn btn-dark">Volver</a>
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    }



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
