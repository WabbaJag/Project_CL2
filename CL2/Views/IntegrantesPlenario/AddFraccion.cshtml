@model IEnumerable<CL2.Models.IntegrantesPlenario>


@{
    ViewData["Title"] = "Asignar Fracciones";

    var idPlen = (int)TempData["idPlen"];
}




<div class="container-fluid px-4">
    <h1 class="mt-4">Asignar Fracciones</h1>

    @* Breadcrumb *@
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Plenario" asp-action="Index">Plenarios</a></li>
        <li class="breadcrumb-item active">Detalles Plenario</li>

    </ol>

    <hr />
    <table>
        <tr>
            <td>
                Diputado
            </td>
            <td>
                <select asp-items="ViewBag.DiputadoID" id="DiputadoID">
                    <option value="">-- Seleccione un Diputado --</option>
                </select>
                @*@Html.DropDownList("DiputadoID", "-- Seleccione un Diputado --")*@
            </td>
        </tr>
        <tr>
            <td>
                Fracción
            </td>
            <td>
                <select asp-items="ViewBag.FraccionID" id="FraccionID">
                    <option value="">-- Seleccione una Fracción --</option>
                </select>
                @*@Html.DropDownList("FraccionID", "-- Seleccione un Diputado --")*@
            </td>
        </tr>
        <tr>
            <td>
                <input type="button" id="btnSave" value="Agregar" />
            </td>
        </tr>
    </table>


    <table class="table-condensed" id="tablaIntegrantesRecords">
        <thead>
            <tr>
                <th>
                    Diputado
                </th>
                <th>
                    Fracción
                </th>
            </tr>
        </thead>
    </table>
    <input type="hidden" name="PlenarioID" id="PlenarioID" value="@idPlen" />
    <input type="button" id="btnSaveData" value="Guardar" class="btn btn-primary" name="btnSaveData" />

</div>
<script src="~/js/site.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnSave").click(function () {
            AddIntegrantesRecord();
        });
    });

    $("#btnSaveData").click(function () {
        SaveIntegrantesRecord();
    });




</script>
<script src="~/js/functions.js" asp-append-version="true"></script>