@model CL2.Models.Diputado

@{
    ViewData["Title"] = "Detalles Diputado";
}
<html lang="en">
<body class="sb-nav-fixed">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Perfil Diputado</h1>

                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="breadcrumb-item active"><a asp-area="" asp-controller="Diputado" asp-action="Index">Diputados Listado</a></li>
                    <li class="breadcrumb-item active">Perfil Diputado</li>
                </ol>

                <hr />
                @*Información personal del diputado*@
                <div class="card">
                    <div class="card-header">
                        Información diputado
                    </div>
                    <div class="card-body">
                        <div class="p-2">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.NombreDiputado)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.NombreDiputado)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PrimerApellido)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PrimerApellido)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.SegundoApellido)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.SegundoApellido)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Provincia)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Provincia)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.CorreoDiputado)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CorreoDiputado)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.TelefonoDiputado)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TelefonoDiputado)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.TelefonoDiputado2)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TelefonoDiputado2)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.GeneroDiputado)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.GeneroDiputado)
                                </dd>
                            </dl>
                        </div>

                        <hr />

                        <div class="form-group btn-group mt-lg-4" role="group">
                            <a asp-action="Index" class=" btn btn-dark">Volver</a>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.DiputadoID">Editar</a>
                        </div>
                    </div>
                </div>
                <br />
                @*Proyectos de ley del diputado*@
                <div class="card">
                    <div class="card-header">
                        Proyectos de ley del diputado
                    </div>
                    <div class="card-body">
                        <div class="p-2">
                            @if (ViewBag.listaProyectos.Count > 0)
                            {
                                <table class="table col-sm-12" id="diputadosTable">
                                    <thead class="thead-light">
                                        <tr class="text-center">
                                            <th>
                                                Número expediente
                                            </th>
                                            <th>
                                                Título Corto
                                            </th>
                                            <th>
                                                Cantidad de firmas
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var proyecto in ViewBag.listaProyectos)
                                        {
                                            <tr>
                                                <td class="text-center align-middle">@proyecto.NumeroExpediente</td>
                                                <td class="text-center align-middle">@proyecto.TituloCorto</td>
                                                <td class="text-center align-middle">@proyecto.CantidadFirmas</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>Él/la diputado(a) no está inscrito(a) en proyectos de ley</p>
                            }
                        </div>
                    </div>
                </div>
                <br />

                @*Comisiones del diputado*@
                <div class="card">
                    <div class="card-header">
                        Comisiones del diputado
                    </div>
                    <div class="card-body">
                        <div class="p-2">
                            @if (ViewBag.listaComisiones.Count > 0)
                            {
                                <table class="table col-sm-12" id="diputadosTable">
                                    <thead class="thead-light">
                                        <tr class="text-center">
                                            <th>
                                                Nombre
                                            </th>
                                            <th>
                                                Tema
                                            </th>
                                            <th>
                                                Año legislativo
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.listaComisiones)
                                        {
                                            <tr>
                                                <td class="text-center align-middle">@item.NombreComision</td>
                                                <td class="text-center align-middle">@item.Tema</td>
                                                <td class="text-center align-middle">@item.AnoLegislativo</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>Él/la diputado(a) no está inscrito(a) en comisiones</p>
                            }
                        </div>
                    </div>
                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
                <script src="js/scripts.js"></script>
            </div>
        </main>
</body>
</html>
