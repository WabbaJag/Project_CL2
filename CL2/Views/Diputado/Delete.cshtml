@model CL2.Models.Diputado

@{
    ViewData["Title"] = "Eliminar Diputado";
}

<html lang="en">
    <body class="sb-nav-fixed">
        <div>
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">¿Desea eliminar este Diputado?</h1>

                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="breadcrumb-item active"><a asp-area="" asp-controller="Diputado" asp-action="Index">Diputados Listado</a></li>
                        <li class="breadcrumb-item active">Eliminar Diputado</li>
                    </ol>


                    <div>
                        <div>
                            
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Nombre Completo
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.nombreCompleto)
                                </dd>

                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.CorreoDiputado)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CorreoDiputado)
                                </dd>

                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.TelefonoDiputado)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TelefonoDiputado)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.TelefonoDiputado2)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TelefonoDiputado2)
                                </dd>

                            </dl>

                            <hr />

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="DiputadoID" />
                                <div class="form-group btn-group mt-lg-4" role="group">
                                    <a asp-action="Index" class="btn btn-dark">Volver</a>
                                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                                </div>
                            </form>

                        </div>

                    </div>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
                    <script src="js/scripts.js"></script>
                </div>
            </main>
        </div>
    </body>
</html>

    

                