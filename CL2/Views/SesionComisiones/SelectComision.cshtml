@model CL2.Models.SesionComision

@{
    ViewData["Title"] = "Selección de comisión";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var idComision = ViewBag.IdComision;
}

<body class="sb-nav-fixed">
    <main>

        <div class="container-fluid px-4">

            <h1 class="mt-lg-4">Crear Sesión de Comisión</h1>
            <hr />

            @* Breadcrumb *@

            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li class="breadcrumb-item"><a asp-area="" asp-controller="SesionComisiones" asp-action="Index">Sesiones de Comisión</a></li>
                <li class="breadcrumb-item active">Seleccionar comisión</li>
            </ol>
            <hr />


            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <select class="form-control" asp-items="ViewBag.listaComisiones" onchange="MostrarAñosLegislativosDeComision()" id="selectComision">
                                <option disabled selected value="0">-- Seleccione una comisión --</option>
                            </select>
                        </div>
                        <hr/>
                        <div class="spinner-border" role="status" id="loadingSpinner">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <hr />
                        <div class="form-group">
                            <select asp-for="ComisionLegislativoID" class="form-control" onchange="" id="selectLegislativos">
                                <option disabled selected value="0">-- Seleccione un año legislativo --</option>
                            </select>
                        </div>
                        <hr/>

                        <div class="form-group">
                            <label asp-for="NumeroSesionComision" class="control-label"></label>
                            <input asp-for="NumeroSesionComision" class="form-control" />
                            <span asp-validation-for="NumeroSesionComision" class="text-danger"></span>
                            <p style="color:red;">@ViewBag.mensajeError</p>
                        </div>

                        <div class="form-group">
                            <label asp-for="PeriodoSesionComision" class="control-label"></label>
                            <select asp-for="PeriodoSesionComision" class="form-control">
                                <option selected=""> Seleccione el periodo de sesión </option>
                                <option value="Ordinario">Ordinario</option>
                                <option value="Extraordinario">Extraordinario</option>
                            </select>
                            <span asp-validation-for="PeriodoSesionComision" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label asp-for="TipoSesionComision" class="control-label"></label>
                            <select asp-for="TipoSesionComision" class="form-control">
                                <option selected=""> Seleccione el tipo de sesión </option>
                                <option value="Ordinaria">Ordinaria</option>
                                <option value="Extraordinaria">Extraordinaria</option>
                            </select>
                            <span asp-validation-for="TipoSesionComision" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label asp-for="FechaSesionComision" class="control-label"></label>
                            <input asp-for="FechaSesionComision" class="form-control" />
                            <span asp-validation-for="FechaSesionComision" class="text-danger"></span>
                        </div>

                        <hr />
                        @* grupo de botones al final: agregar y atrás *@
                        <div class="form-group btn-group mt-lg-4" role="group">
                            <a asp-action="Index" class=" btn btn-dark">Volver</a>
                            <!-- Botón para abrir el modal -->
                            <input type="submit" value="Agregar" class="btn btn-primary" @*onclick = "Validate(this, event);"*@ />
                        </div>
                    </form>



                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/functions.js" asp-append-version="true"></script>
    
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


