@model CL2.Models.Comision

@{
    ViewData["Title"] = "Eliminar Comisión";
}

<html lang="en">


<body class="sb-nav-fixed">
    <main>

        <div class="container-fluid px-4">

            <h1 class="mt-lg-4">¿Desea eliminar esta Comisión?</h1>

            @* Breadcrumb *@
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="" asp-controller="Comisions" asp-action="Index">Comisiones</a>
                </li>
                <li class="breadcrumb-item active">Eliminar Plenario</li>
            </ol>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.NombreComision)*@
                    @Html.DisplayName("Nombre de Comisión")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreComision)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Detalle)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Detalle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tipo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tema)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tema.TemaDesc)
                </dd>
            </dl>

            <hr />
            <form asp-action="Delete">
                <input type="hidden" asp-for="ComisionID" />
                <div class="btn-group mt-lg-4" role="group">
                    <a asp-action="Index" class="btn btn-dark">Volver</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
                
            </form>
        </div>
    </main>
</body>
</html>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>