@model CL2.Models.Comision

@{
    ViewData["Title"] = "Agregar Comisión";
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="_ValidationScriptsPartial" />

}

<html lang="en">
<body class="sb-nav-fixed">
    <main>
        <div class="container-fluid px-4">

            <h1 class="mt-lg-4">Agregar Comisión</h1>

            @* Breadcrumb *@

            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Comisions" asp-action="Index">Comisiones</a></li>
                <li class="breadcrumb-item active">Agregar Comisión</li>

            </ol>
            <hr />

            <div class="row">
                <div class="col-md-4">

                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
                    {
                        @Html.AntiForgeryToken()
                    }

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">

                            @Html.DisplayName("Nombre de Comisión")
                            <input asp-for="NombreComision" class="form-control" />
                            <span asp-validation-for="NombreComision" class="text-danger"></span>
                            <p style="color:red;">@ViewBag.mensajeError</p>
                        </div>

                        <div class="form-group">
                            <label asp-for="Detalle" class="control-label"></label>
                            <input asp-for="Detalle" class="form-control" aria-describedby="Detalle" type="text" />

                            <span asp-validation-for="Detalle" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Tipo" class="control-label"></label>
                            <select asp-for="Tipo" class="form-control">
                                <option value="" disabled selected> Seleccione el tipo de comisión</option>
                                <option>Especial</option>
                                <option>Plena</option>
                                <option>Permanentes Ordinarias</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*@Html.Label("Temas de comisión")
                                @Html.DropDownList("x", ViewBag.listaTemas as List<SelectListItem>, new { @class = "form-control", @name = "x", @id = "x", @required = "required" })*@
                            @Html.DisplayName("Tema de Comisión")
                            <select asp-for="TemaID" class="form-control" asp-items="ViewBag.listaTemas">
                                <option disabled selected>-- Seleccione un Tema --</option>
                            </select>
                            <span asp-validation-for="TemaID" class="text-danger" />
                        </div>

                        <hr />

                        @* grupo de botones al final: agregar y atrás *@
                        <div class="form-group btn-group mt-lg-4" role="group">
                            <a asp-action="Index" class="btn btn-dark">Volver</a>
                            <!-- Botón para abrir el modal -->
                            <button type="button" class="btn btn-success" onclick="RegistrarComision()">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>

