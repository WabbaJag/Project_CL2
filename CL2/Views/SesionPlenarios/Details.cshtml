@model CL2.Models.SesionPlenario

@{
    ViewData["Title"] = "Detalle Sesión de Plenario";
}


<html lang="en">


<body class="sb-nav-fixed">
    <main>
        <div class="container-fluid px-4">

            <h1 class="mt-lg-4">Sesión de Plenario</h1>

            @* Breadcrumb *@

            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>

                <li class="breadcrumb-item"><a asp-controller="SesionPlenarios" asp-action="Index">Listado de Sesiones</a></li>
                <li class="breadcrumb-item active">Detalle Sesión Plenario</li>


            </ol>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Plenario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Plenario.Administracion.AdministracionPeriodo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NumeroSesion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NumeroSesion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PeriodoSesionPlenario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PeriodoSesionPlenario)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TipoSesionPlenario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TipoSesionPlenario)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FechaSesionPlenario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaSesionPlenario)
                    </dd>

                </dl>
                <div>
                    <a asp-controller="ControlPolitico" asp-action="IndexSpecific" asp-route-id=@Model.SesionPlenarioID class="btn btn-info" >Ver Control Político</a>
                    <hr />
                </div>
            </div>
            <div class="btn-group" role="group">
                <a asp-action="Index" class="btn btn-dark">Volver</a>
                <a asp-action="Edit" asp-route-id=@Model.SesionPlenarioID class="btn btn-warning">Editar</a>
            </div>





        </div>
    </main>
    <script src="~/js/functions.js" asp-append-version="true"></script>
</body>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</html>


<script src="~/js/functions.js" a></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>