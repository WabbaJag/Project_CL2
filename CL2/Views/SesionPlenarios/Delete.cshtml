@model CL2.Models.SesionPlenario

@{
    ViewData["Title"] = "Eliminar Sesión de Plenario";
}
<partial name="_NotificationPartial" />


<body class="sb-nav-fixed">
    <h1 class="mt-4">¿Desea eliminar esta Sesión de Plenario?</h1>
    <div class="mt-lg-3">



        <hr />

        @* Breadcrumb *@
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
                <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="" asp-controller="SesionPlenarios" asp-action="Index">Listado de Sesiones</a>
            </li>
            <li class="breadcrumb-item active">Eliminar Sesión de Plenario</li>
        </ol>

        <hr />

        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Plenario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Plenario.Administracion.AdministracionPeriodo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroSesion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroSesion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PeriodoSesionPlenario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PeriodoSesionPlenario)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TipoSesionPlenario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoSesionPlenario)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaSesionPlenario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaSesionPlenario)
                </dd>

            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="SesionPlenarioID" />
                <div class="btn-group" role="group">
                    <a asp-action="Index" class="btn btn-dark">Volver</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>

            </form>
        </div>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>